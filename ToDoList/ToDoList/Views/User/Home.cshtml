    <!-- ============================================================== -->
    <!-- This page plugins -->
    <!-- ============================================================== -->
    <!--Morris JavaScript -->
    <script src="~/Script/raphael/raphael-min.js"></script>
    <script src="~/Script/morrisjs/morris.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            LoadChart();
        });

        function LoadChart() {
            debugger;
            $.ajax({
                type: 'GET',
                url: '/User/GetStatus/',
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                async: false,
                succes: function (result) {
                    debugger;
                    Morris.Donut({
                        element: 'morris-donut-chart',
                        data:
                            $.each(JSON.parse(result), function (index, val) {
                                [{
                                    label: val.Status,
                                    value: val.Total + '%'
                                }]
                            }),
                        resize: true,
                        colors: ['#009efb', '#55ce63', '#2f3d4a']
                    });
                }
            })
        };

    </script>

    <!-- ============================================================== -->
    <!-- Style switcher -->
    <!-- ============================================================== -->
    <script src="~/monster-admin-lite-master/assets/plugins/styleswitcher/jQuery.style.switcher.js"></script>
}

